<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="#009688"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"

            xmlns:android="http://schemas.android.com/apk/res/android"
            tools:context=".WorkFlow.Registration">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="14dp"
                android:text="@string/title"
                android:textAppearance="?android:textAppearanceLarge"
                android:textColor="#fff"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/mobile"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/textView"
                android:layout_marginTop="20dp"
                android:background="@drawable/shape"
                android:gravity="center"
                android:hint="User Name"
                android:inputType="text"
                android:textColor="#3b3a3a"
                android:textColorHint="#FFF" />
            <ImageView
                android:id="@+id/imageView"
                android:layout_width="45dp"
                android:layout_height="47dp"
                android:layout_alignStart="@+id/mobile"
                android:layout_alignTop="@+id/mobile"
                android:layout_marginStart="11dp"
                android:src="@drawable/person" />

            <EditText
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/mobile"
                android:layout_marginTop="20dp"
                android:background="@drawable/shape"
                android:gravity="center"
                android:hint="Email Address"
                android:inputType="text"
                android:textColor="#3b3a3a"
                android:textColorHint="#FFF" />
            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="45dp"
                android:layout_height="47dp"
                android:layout_alignStart="@+id/imageView"
                android:layout_alignTop="@+id/email"
                android:src="@drawable/mail" />

            <EditText
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/email"
                android:layout_marginTop="20dp"
                android:background="@drawable/shape"
                android:gravity="center"
                android:hint="Enter Password"
                android:inputType="textPassword"
                android:textColor="#3b3a3a"
                android:textColorHint="#FFF" />
            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="45dp"
                android:layout_height="47dp"
                android:layout_alignStart="@+id/imageView1"
                android:layout_alignTop="@+id/password"
                android:src="@drawable/pwd" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/password"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"
                android:text="Password must be 6 Characters length"
                android:textColor="#fff" />

            <EditText
                android:id="@+id/cpassword"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_below="@+id/textView2"
                android:layout_marginTop="10dp"
                android:background="@drawable/shape"
                android:gravity="center"
                android:hint="Confirm Password"
                android:inputType="textPassword"
                android:textColor="#3b3a3a"
                android:textColorHint="#FFF" />
            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="45dp"
                android:layout_height="47dp"
                android:layout_alignStart="@+id/imageView2"
                android:layout_alignTop="@+id/cpassword"
                android:src="@drawable/lock" />



            <Button
                android:id="@+id/button1"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_below="@+id/cpassword"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:background="@drawable/shapes"
                android:onClick="register"
                android:text="Register"
                android:textColor="#fff" />

            <Button
                android:id="@+id/button2"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_below="@+id/button1"
                android:layout_marginTop="20dp"
                android:background="@drawable/google"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:onClick="back"
                android:textAlignment="center"
                android:text="Log In"
                android:textColor="#fff"
                android:textIsSelectable="true" />


        </RelativeLayout>
    </ScrollView>
</LinearLayout>

